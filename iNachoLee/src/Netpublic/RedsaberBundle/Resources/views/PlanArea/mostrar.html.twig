{% extends 'NetpublicCoreBundle::layout.html.twig' %}
{% block title %}Preparador de clase.{% endblock%} 

{% block main_container %}
<div class="well" style="margin: 30px;">
    <div class="col-lg-12 center">
         <h2>Planes de Areas.</h2>
    </div>
    
    <select id="grado" onchange="getAsignaturasGrado('grado','asignatura');">
        <option value="*">Grado ?</option>
        {%for grado in grados%}
            <option value="{{grado.id}}">{{grado}}</option>
        {%endfor%}
    </select>
        <select id="asignatura" onchange="mostrarTemasAsignatura();">
            <option value="*">Asignatura ? </option>
        </select>    
     
        <div class="col-lg-12" id="container-temas-asignatura">
        </div>
        <div class="clearfix"></div> 
         
</div>  


{%endblock%}
