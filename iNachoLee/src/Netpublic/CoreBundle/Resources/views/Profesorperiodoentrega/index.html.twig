<h5>Lista de Fecha De Entrega Del Profesor</h5>

<table class="table table-striped">
    <thead>
        <tr>            
            <th>Fecha_inicio | Fecha_final</th>
            <th>Periodo</th>  
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            {#<td><a href="{{ path('profesorperiodoentrega_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
            <td>{% if entity.fechainicio %}{{ entity.fechainicio|date('Y-m-d H:i:s') }}{% endif%}
                | {% if entity.fechafinal %}{{ entity.fechafinal|date('Y-m-d H:i:s') }}{% endif%}
            </td>
            <td>
               {{entity.periodo}} ({{entity.periodo.padre}})
            </td>
            <td>
                <a href="#" onclick="editarfecha_entregainfoinfoAcademicaDefectoAno({{entity.id}})">editar</a>
                | <form id="{{entity.id}}" name="{{entity.id}} method="POST" style="display:inline; ">
                   
                        <button style="display: inline;border: 0px;background-color: rgb(249, 249, 249);color: rgb(87, 207, 243);" onclick="deletefecha_entregaUsuarioinfoAcademicaDefectoAno('{{entity.id}}','{{entity.profesor.id}}')">Eliminar</button>
                         {{ form_widget(delete_form[loop.index0]) }}
                </form>  
                  
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="#" onclick="newfecha_entregainfoAcademicaDefectoAno({{profesor_id}});">
            Nuevo.
        </a>
    </li>
</ul>
