{%if asg_perdidas|length>0%}
<div class="widget-box transparent">    
    <div class="widget-header widget-header-flat">
        <h4 class="lighter red"><i class="icon-remove-sign orange"></i>Asignaturas Perdidas</h4>
        <div class="widget-toolbar">
                <a data-action="collapse" href="#">
                    <i class="icon-chevron-up"></i>
		</a>
	</div>
    </div>
    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-bordered table-striped">
                <thead class="thin-border-bottom">
                    <tr>
                        <th>
                            <i class="icon-caret-right red"></i>
                                Area/Asignatura
			</th>
                        <th>
                            <i class="icon-caret-right red"></i>
                                Nota
                        </th>
                     </tr>
		</thead>
                <tbody>
                    {%for asg in asg_perdidas%}
                     <tr>
                        <td>{{asg.asg}}/{{asg.asg.area}}</td>
                        <td>
                            <span class="label label-danger arrowed">{{asg.nota}}</span>
                            <small>
                            <s class="red"></s>
                            </small>
                        </td>
                        
                    </tr>
                    {%endfor%}
		</tbody>
            </table>
	</div><!-- /widget-main -->
    </div><!-- /widget-body -->
</div>
{%else%}
<h4 class="light-grey">Este alumno no tiene asginaturas perdidas</h4>
{%endif%}



