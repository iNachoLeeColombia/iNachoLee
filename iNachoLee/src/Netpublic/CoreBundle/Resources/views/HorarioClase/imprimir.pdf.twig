<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>

{%for clases_hora in clases_profesores %}
    <dynamic-page> 
<div>
    <h3 style="text-align: center;">{{profesores[loop.index0]}}</h3> 
 <table class="table table-bordered">
    <tr>
    <td>Hora</td>    
    <td>Lunes</td>
    <td>Martes</td>
    <td>Miercoles</td>
    <td>Jueves</td>
    <td>Viernes</td>
    <td>Sabado</td>
    <td>Domingo</td>
    </tr>
    
    {%for c_h in clases_hora%}
        <tr>
            {% for c in c_h %}
                <td> 
                    
                    
                    {%if c.tipo==0%}

                    {%elseif c.tipo==1%}
                        {{c.getCargaAcademica.grupo}}-{{c.getCargaAcademica.asignatura}}
                    {%elseif c.tipo==2%} 
			Festivo                       
   {%elseif c.tipo==-1%}                        
                        {{c.valor}}
                                     

                    {%elseif c.tipo==3%}    
                        <span style="color: white">    
                            ------
                        </span>   
                    {%endif%}                        
                    
                        
                </td>
            {%endfor%}    
        </tr>
    {%endfor%}    
    
</table>
  </div>
</dynamic-page>             
{%endfor%}
</pdf>
