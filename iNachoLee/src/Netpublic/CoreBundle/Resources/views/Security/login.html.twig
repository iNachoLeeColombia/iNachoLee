{% extends 'NetpublicCoreBundle::layout.html.twig' %}
{% block login %}    
    {% if error %}
<span style="color: red;" >
{%if error.message=='Bad credentials'%}
        Nombre De Usuario y Contraseña no coinciden.
  {%endif%}      
{%if error.message=='The presented password is invalid.'%}
       Contraseña no coincide.
  {%endif%}      
        

    {% endif %}
       <div class=" col-md-8">
       <form role="form" class="navbar-form form-inline" action="{{ path("login_check") }}" method="post" id="login">
           <div class="col-md-6"></div>
           <div class="form-group col-sm-12 col-md-2">
               
               <input type="text"  name="_username"  placeholder="usuario" class="form-control">
           </div>
           <div class="form-group col-sm-12 col-md-2">
               <label class="sr-only" for="username">Usuario</label>
                <input type="password"  name="_password" placeholder="contraseña" class="form-control">
           </div>
           <div class="col-sm-12 col-md-2" style="padding-bottom: 4px;">    
           <button class="btn btn-info btn-sm " type="submit">
                <i class="icon-key bigger-110"></i>
		Entrar
            </button>
                           
            </div> 
               
	</form>
        </div>       
       
            
{% endblock %}
{%block container%}
